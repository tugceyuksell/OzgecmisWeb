@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>ÖZ GEÇMİŞ</title>
  
    <link rel="stylesheet" href="../../assets/css/style.css">
    <link rel="shortcut icon" href="../../assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="../../assets/images/favicon.ico">
                            </div>
                            <h4>Merhaba! Haydi başlayalım.</h4>
                            <h6 class="font-weight-light">Devam etmek için giriş yap.</h6>
                            <form action="/Login/Index" method="post" class="pt-3">
                                <div class="form-group">
                                    <input name="Email" type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Kullanıcı Mail">
                                </div>
                                <div class="form-group">
                                    <input name="Password" type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifre">
                                </div>
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Giriş Yap</button>
                                </div>
                            </form>
                            @if (@TempData["CikisMesaji"] != null)
                            {
                                <div class="col-md-12 alert alert-success" style="margin-top:15px;">@TempData["CikisMesaji"]</div>
                            }
                            @if (ViewBag.Message != null)
                            {
                                <div class="col-md-12 alert alert-danger" style="margin-top:15px;">@ViewBag.Message </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>