<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="ibox-title">
                <h4 class="card-title">Kişi Bilgileri</h4>
                <input style="float:right" type="button" onClick="location.href='/admin/KisiBilgileri/Insert'" class="btn btn-primary" value="Yeni Ekle"> <br /><br /><br />
            </div>

            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Sıra No</th>
                                <th>Ad Soyad</th>
                                <th>Doğum Tarihi</th>
                                <th>Cinsiyet</th>
                                <th>Lisans</th>
                                <th>E-mail</th>
                                <th>Telefon</th>
                                <th>Adres</th>
                                <th>LinkedIn</th>
                                <th>GitHub</th>
                                <th>Medium</th>
                                <th>Sürücü Belgesi</th>
                                <th>Durum</th>
                                <th>İşlemler</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                                foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@Html.Raw(@i++)</td>
                                        <td>@item.NameSurname</td>
                                        <td>@item.DateOfBirth</td>
                                        <td>@item.Gender</td>
                                        <td>@item.Licence</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Address</td>
                                        <td>@item.LinkedIn</td>
                                        <td>@item.GitHub</td>
                                        <td>@item.Medium</td>
                                        <td>@item.DrivingLicense</td>
                                        <td>@Html.Raw(@item.Status ==true ? "Aktif" : "Pasif")</td>
                                        <td>
                                            <a href="/Admin/KisiBilgileri/Update/@item.UID" class="badge badge-gradient-success">Güncelle</a>
                                            <a href="/Admin/KisiBilgileri/Delete/@item.UID" class="badge badge-gradient-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        @if (TempData["Result"] != null)
        {
            if (TempData["Result"].ToString() == Core.Results.ComplexTypes.StatusCode.Success.ToString())
            {
                <div class="alert alert-success">İşlem Başarılı</div>
            }
            else
            {
                <div class="alert alert-danger">İşlem Başarısız</div>
            }
        }
    </div>
</div>