<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="ibox-title">
                <h4 class="card-title">Proje Kategorileri</h4>
                <input style="float:right" type="button" onClick="location.href='/admin/ProjeKategorileri/Insert'" class="btn btn-primary" value="Yeni Ekle"> <br /><br /><br />
            </div>

            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Sıra No</th>
                                <th>Adı</th>
                                <th>Durum</th>
                                <th>İşlemler</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.Raw(@i++)</td>
                                        <td>@item.Name</td>
                                        <td> @Html.Raw((item.Status == true) ? "Aktif" : "Pasif")</td>
                                        <td>
                                            <a href="/Admin/ProjeKategorileri/Update/@item.UID" class="badge badge-gradient-success">Güncelle</a>
                                            <a href="/Admin/ProjeKategorileri/Delete/@item.UID" class="badge badge-gradient-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (TempData["Result"] != null)
        {
            if (TempData["Result"].ToString() == Core.Results.ComplexTypes.StatusCode.Success.ToString())
            {
                <div class="alert alert-success">İşlem Başarılı</div>
            }
            else
            {
                <div class="alert alert-danger">İşlem Başarısız</div>
            }
        }
    </div>
</div>