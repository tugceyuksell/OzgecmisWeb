
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">


        <div class="card-body">
            <div class="ibox-title">
                <h4 class="card-title">Projeler</h4>
                <input style="float:right" type="button" onClick="location.href='/admin/Projeler/Insert'" class="btn btn-primary" value="Yeni Ekle"> <br /><br /><br />
            </div>

            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Sıra No</th>
                                <th>Kişi</th>
                                <th>Adı</th>
                                <th>Proje Kategorisi</th>
                                <th>Proje Yolu</th>
                                <th>Resim</th>
                                <th>Açıklama</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.Raw(@i++)</td>
                                        @foreach (var item1 in ViewBag.Kisiler)
                                        {
                                            @if (item1.UID == item.PersonalInformationUID)
                                            {
                                                <td>
                                                    @item1.NameSurname
                                                </td>
                                            }
                                        }
                                        <td>@item.Name</td>
                                        @foreach (var item1 in ViewBag.ProjeKategorileri)
                                        {
                                            @if (item1.UID == item.CategoriesProjectUID)
                                            {
                                                <td>
                                                    @item1.Name
                                                </td>
                                            }

                                        }
                                        <td>@item.Address</td>
                                        <td><img src="/images/@item.Image" width="70" /></td>
                                        <td>@item.Description</td>
                                        <td>
                                            <a href="/Admin/Projeler/Update/@item.UID" class="badge badge-gradient-success">Güncelle</a>
                                            <a href="/Admin/Projeler/Delete/@item.UID" class="badge badge-gradient-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @if (TempData["Result"] != null)
        {
            if (TempData["Result"].ToString() == Core.Results.ComplexTypes.StatusCode.Success.ToString())
            {
                <div class="alert alert-success">İşlem Başarılı</div>
            }
            else
            {
                <div class="alert alert-danger">İşlem Başarısız</div>
            }
        }

    </div>
</div>


