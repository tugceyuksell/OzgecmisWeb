@model Entities.AboutMe
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımda Düzenle</h4>
            <a href="/admin/Hakkimda" class="btn btn-primary" style="float:right">Geri Git</a> <br /><br /><br />
            <form action="/admin/Hakkimda/Update/@Model.UID" method="post" enctype="multipart/form-data">
                 <input type="datetime"  name="CreatedDate" hidden="hidden" value=@Model.CreatedDate />
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Ön Yazı </label>
                    <div class="col-sm-6">
                        <textarea type="text" class="form-control" asp-for="CoverLetter" placeholder="Ön yazı giriniz"> @Model.CoverLetter</textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Profil Resmi </label>
                    <div class="col-sm-6">
                        <img src="/images/@Model.ProfilImage" />
                        <input type="file" name="ProfilImages" class="form-control"/>
                        <input hidden type="text" name="ProfilImage" class="form-control" value="@Model.ProfilImage"/>

                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Arka Plan Resmi</label>
                    <div class="col-sm-6">
                        <img src="/images/@Model.BoardImage" />
                        <input type="file" name="BoardImages" class="form-control"/>
                        <input hidden type="text" name="BoardImage" class="form-control" value="@Model.BoardImage"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Kişi Seç</label>
                    <div class="col-sm-6">
                        <select class="form-control form-control-sm" name="PersonalInformationUID">
                            @foreach (var item in ViewBag.Kisiler)
                            {
                                <!option value="@item.UID" @if (item.UID == Model.PersonalInformationUID) { @Html.Raw("selected ='selected'")} >@item.NameSurname</!option>
                            }

                        </select>
                    </div>
                </div>
                <button type="submit" class="btn btn-gradient-info">Kaydet</button>
                                <a href="/admin/Hakkimda" class="btn btn-light" type="button">Vazgeç</a>

            </form>

            <div class="col-md-12" style="margin-top:15px;">
                @if (ViewBag.Message != null)
                {
                    if (ViewBag.Message.StatusCode == Core.Results.ComplexTypes.StatusCode.Success)
                    {
                        <div class="alert alert-success">@ViewBag.Message.UserMessage</div>
                    }
                    else
                    {
                        <div class="alert alert-danger">@ViewBag.Message.UserMessage</div>
                    }
                }
            </div>
        </div>
    </div>
</div>